<h1>New List for <%@list.name %></h1>
<%= simple_form_for(@list, @bookmark) do |f| %>
  <%= f.association :movie, collection: Movie.all.order(:title) prompt:"Select a Movie" %>
  <%= f.input :comment, label:"Comment", require: true, min_length: 6 %>
  <%= f.button :submit, "Add a new movie" %>
<% end %>
